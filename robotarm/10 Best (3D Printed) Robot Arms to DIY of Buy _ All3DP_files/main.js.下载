jQuery(function($){var beginsWith=function(needle,haystack){return(haystack.substr(0,needle.length)==needle);};var wasLoggedIn=false;var cookieList=Object.keys(Cookies.get())||{};cookieList.forEach(function(cookie){var tmpState=beginsWith('wordpress_wpaac',cookie);if(tmpState===true){wasLoggedIn=true;}});if(wasLoggedIn===true&&wpaac.post_id&&wpaac.post_id>0){$.ajax({url:wpaac.ajax_url,type:'post',data:{action:'wpaac',post_id:wpaac.post_id},success:function(resp){if(resp&&resp.is_authenticated===true&&resp.edit_link){var tpl='<div class="wpaac__btn wpaac__btn--hidden"><a href="'+resp.edit_link+'" class="wpaac__link">EDIT</a></div>';$('body').append(tpl);setTimeout(function(){$('.wpaac__btn').removeClass('wpaac__btn--hidden').addClass('wpaac__btn--show');$('.product__content .product-link').each(function(){var pId=$(this).data('product-id');if(pId){var link=resp.edit_link;link=link.replace(wpaac.post_id,pId);var productTpl='<div style="position: absolute; top: 3px; right: 3px;"><a class="link" href="'+link+'" style="font-size: 20px; text-decoration: none;">‚úè</a></div>';$(this).append(productTpl);}});},500);}}});$(window).scroll(function(){if(jQuery('body').height()-100<=(jQuery(window).height()+jQuery(window).scrollTop())){$('.wpaac__btn').removeClass('wpaac__btn--show').addClass('wpaac__btn--hidden');}else{$('.wpaac__btn').removeClass('wpaac__btn--hidden').addClass('wpaac__btn--show');}});}});